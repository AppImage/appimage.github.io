	<name>SVGWall</name>
	<summary>SVG Wallpaper Utility for Xorg</summary>
	<icon type="local">icon</icon>
	<description>
		<p>Applies SVG files (both local and remote) as wallpapers/backgrounds to an Xorg server.</p>
	</description>
	<categories>
		<category>Utility</category>
	</categories>
	<launchable type="desktop-id">svgwall.desktop</launchable>
	<url type="homepage">https://github.com/grimpirate/SVGWall</url>
	<screenshots>
		<screenshot type="default">
			<caption>A sample desktop with SVG wallpaper applied</caption>
			<image>https://raw.githubusercontent.com/grimpirate/SVGWall/main/screenshot.png</image>
		</screenshot>
	</screenshots>
	<provides>
		<id>svgwall.desktop</id>
		<binary>AppRun</binary>
		<library>libjnix11.so</library>
		<mediatype>image/svg+xml</mediatype>
	</provides>
	<requires>
		<id version="1.17" compare="ge">Apache Batik</id>
		<id version="4.7.6">picocli</id>
		<id version="1.7.15">Mozilla Rhino</id>
		<id version="22">OpenJDK</id>
		<id version="1.8.9.1">libX11</id>
	</requires>
	<supports>
		<internet>always</internet>
	</supports>
